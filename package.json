{
  "name": "Pokerogue",
  "version": "1.5.0",
  "description": "Simple Pokerogue electron app",
  "main": "main.js",
  "author": "Ozidinne",
  "scripts": {
    "start": "electron .",
    "build:win-zip": "electron-builder --win --x64 --config.win.target=zip --publish=never",
    "build:win-nsis": "electron-builder --win --x64 --config.win.target=nsis --publish=never",
    "build:linux-zip": "electron-builder --linux --x64 --config.linux.target=zip --publish=never"
  },
  "devDependencies": {
    "electron": "^29.3.3",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "files": [
      "**/*",
      "!node_modules/**",
      "!README.md",
      "!.gitignore",
      "!**/.github/**",
      "!icons/**"
    ],
    "win": {
      "target": [
        "zip",
        "nsis"
      ],
      "icon": "icons/PR.ico",
      "artifactName": "Pokerogue-Win.zip"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icons/PR.ico",
      "uninstallerIcon": "icons/PR.ico",
      "installerHeaderIcon": "icons/PR.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "Pokerogue-Installer.exe",
      "shortcutName": "Pokerogue",
      "runAfterFinish": false
    },
    "linux": {
      "target": [
        "zip",
        "dir"
      ],
      "icon": "icons/PR.png",
      "artifactName": "Pokerogue-Linux.zip"
    }
  }
}
